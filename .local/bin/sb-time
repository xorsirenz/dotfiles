#!/bin/sh

notify() {
    notify-send --icon=office-calendar-symbolic \
        --hint=string:x-canonical-private-synchronous:"$1" "$@"
}

case $BLOCK_BUTTON in
    1)
        dunstify -h " " "$(cal)"
        ;;
    3)
        dunstify -h " " "$(date '+%A %d/%m/%y')"
        ;;
esac

. sb-theme
display "$(date '+%H:%M')"
